{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table table-bordered table-striped mt-2">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ category.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img class="rounded-circle" src="{{ asset('uploads/images/' ~ category.imageFilename) }}" style="width: 150px;" alt="{{ category.imageFilename }}">
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_category_index') }}">back to list</a>

{% endblock %}
