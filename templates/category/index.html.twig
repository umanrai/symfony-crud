{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>
    <a class="btn btn-primary" href="{{ path('app_category_new') }}">Create new</a>
    <table class="table table-bordered table-striped mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Status</th>
                <th>Featured</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>
                    <img class="rounded-circle" src="{{ asset('uploads/images/' ~ category.imageFilename) }}" style="width: 50px;height: 50px" alt="{{ category.imageFilename }}">
                </td>
                <td>{{ category.name }}</td>
                <td>{{ category.status ? 'Yes' : 'No' }}</td>
                <td>{{ category.featured ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-secondary me-2" href="{{ path('app_category_show', {'id': category.id}) }}"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-primary me-2" href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="bi bi-pencil-square"> </i></a>
                        {{ include('category/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
