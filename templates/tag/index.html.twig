{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag</h1>
    <a class="btn btn-primary" href="{{ path('app_tag_new') }}">Create new</a>
    <table class="table table-bordered table-striped mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.slug }}</td>
                <td>{{ tag.status ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-secondary me-2" href="{{ path('app_tag_show', {'id': tag.id}) }}"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-primary me-2" href="{{ path('app_tag_edit', {'id': tag.id}) }}"><i class="bi bi-pencil-square"> </i></a>
                        {{ include('tag/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
